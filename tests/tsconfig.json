{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "../dist/tests",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "..",
    "paths": {
      "*": ["build/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../build/**/*.d.ts"
  ]
} 